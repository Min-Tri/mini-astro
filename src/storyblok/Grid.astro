---
import { storyblokEditable, type SbBlokData } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props;
const colMun = blok.colMun || 3;
---

<style define:vars={{ colMun }}>
  .container {
    grid-template-columns: repeat(var(--colMun), minmax(0, 1fr));
  }
</style>

<div {...storyblokEditable(blok)}>
  <div class="container mx-auto grid gap-12 my-12 place-items-center">
    {
      blok.columns?.map((blok: SbBlokData) => {
        return <StoryblokComponent blok={blok} />;
      })
    }
  </div>
</div>
