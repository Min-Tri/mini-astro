---

<div class="min-h-screen bg-gray-100 py-10 flex justify-center">
  <div class="w-full max-w-5xl bg-white p-8 shadow-md rounded-lg">
    <!-- Shopping Cart Header -->
    <h2 class="text-2xl font-bold mb-4 text-center">Shopping Cart</h2>
    <p class="text-center text-gray-500 mb-8">
      You are eligible for Free Shipping.
    </p>

    <div class="grid grid-cols-3 gap-8">
      <!-- Product List -->
      <div class="col-span-2">
        <!-- Item 1 -->
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-start space-x-4">
            <img
              src="/path/to/basic-starter-pack.jpg"
              alt="Basic Starter Pack"
              class="w-24 h-24 object-cover"
            />
            <div>
              <h3 class="font-semibold text-lg">Basic Starter Pack</h3>
              <p class="text-sm text-gray-600">8 colors | Small</p>
              <p class="text-green-500 text-sm font-medium">In Stock</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <input
              type="number"
              class="w-12 border border-gray-300 rounded-lg text-center"
              value="1"
            />
            <span class="text-xl font-semibold">$399</span>
            <button class="text-red-500">x</button>
          </div>
        </div>

        <!-- Item 2 -->
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-start space-x-4">
            <img
              src="/path/to/pink-blouse.jpg"
              alt="Pink Blouse"
              class="w-24 h-24 object-cover"
            />
            <div>
              <h3 class="font-semibold text-lg">Pink Blouse</h3>
              <p class="text-sm text-gray-600">Black | Medium</p>
              <p class="text-red-500 text-sm font-medium">Out of Stock</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <input
              type="number"
              class="w-12 border border-gray-300 rounded-lg text-center"
              value="1"
              disabled
            />
            <span class="text-xl font-semibold">$1,490</span>
            <button class="text-red-500">x</button>
          </div>
        </div>

        <!-- Item 3 -->
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-start space-x-4">
            <img
              src="/path/to/premium-suit.jpg"
              alt="Premium Suit"
              class="w-24 h-24 object-cover"
            />
            <div>
              <h3 class="font-semibold text-lg">Premium Suit</h3>
              <p class="text-sm text-gray-600">Yellow | Large</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <input
              type="number"
              class="w-12 border border-gray-300 rounded-lg text-center"
              value="1"
            />
            <span class="text-xl font-semibold">$1,399</span>
            <button class="text-red-500">x</button>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="col-span-1">
        <div class="bg-gray-50 p-6 rounded-lg shadow-md">
          <h3 class="text-lg font-bold mb-4">Order Summary</h3>
          <div class="flex justify-between items-center mb-3">
            <span>Subtotal</span>
            <span class="font-semibold">$3,288</span>
          </div>
          <div class="flex justify-between items-center mb-3">
            <span>Shipping estimate</span>
            <span class="font-semibold">$0</span>
          </div>
          <div class="flex justify-between items-center mb-3">
            <span>Tax estimate</span>
            <span class="font-semibold">$7</span>
          </div>
          <hr class="my-4" />
          <div class="flex justify-between items-center text-xl font-bold mb-6">
            <span>Total</span>
            <span>$3,295</span>
          </div>
          <button
            class="w-full bg-black text-white py-3 rounded-lg hover:bg-gray-900"
            >Checkout</button
          >
          <button
            class="w-full mt-4 bg-white text-black border border-black py-3 rounded-lg hover:bg-gray-100"
            >Continue Shopping</button
          >
        </div>
      </div>
    </div>

    <div class="flex justify-end mt-8">
      <p class="text-sm text-gray-500">
        Tax included. Shipping calculated at checkout.
      </p>
    </div>

    <div class="flex justify-center mt-6">
      <div class="flex space-x-4 items-center">
        <img src="/path/to/visa-logo.png" alt="Visa" class="w-8" />
        <img src="/path/to/mastercard-logo.png" alt="Mastercard" class="w-8" />
        <img src="/path/to/paypal-logo.png" alt="Paypal" class="w-8" />
      </div>
    </div>
  </div>
</div>
